<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/imageCounterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Image Counter: 0/10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageCounterText"
        android:layout_toLeftOf="@+id/nextImageButton"
        android:layout_toRightOf="@+id/previousImageButton"
        android:contentDescription="@string/add_pic_img_view_desc"
        android:src="@drawable/abc_ab_bottom_transparent_dark_holo" />

    <ImageButton
        android:id="@+id/previousImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_previous_picture" />

    <ImageButton
        android:id="@+id/nextImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next_picture" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_camera"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/button_take_picture"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/button_select"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/button_select_picture" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/deleteImageButton"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/button_delete_picture"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/finishButton"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="@string/button_finish"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>